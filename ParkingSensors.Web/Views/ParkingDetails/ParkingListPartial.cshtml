@using PoCParkingSensors.Models
@model IEnumerable<Data>

<h1>Search results</h1>
<p>Number of free carspots = @ViewData["UnOccupiedBays"]</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BayId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lon)
        </th>
        <th></th>
    </tr>

    @foreach (Data item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BayId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lon)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { bayId = item.BayId, lat = item.Lat, lon = item.Lon, status = item.Status })
            </td>
        </tr>
    }
</table>
